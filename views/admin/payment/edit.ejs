<!DOCTYPE html>
<html lang="en">
  <body class="hold-transition sidebar-mini layout-fixed">
    <%- include ../../partial/header.ejs %> <%- include ../../partial/navbar.ejs
    %> <%- include ../../partial/sidebar.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Jenis Pembayaran</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item">
                  <a href="/payment">Jenis Pembayaran</a>
                </li>
                <li class="breadcrumb-item active">Ubah</li>
              </ol>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Ubah Jenis Pembayaran</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/payment/edit/<%= payment?._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="type">Tipe</label>
                      <input
                        type="text"
                        class="form-control"
                        id="type"
                        name="type"
                        placeholder="Masukkan type pembayaran"
                        required
                        value="<%= payment?.type %>"
                      />
                    </div>
                   <div class="form-group">
                      <label>Bank</label>
                      <div class="select2-purple">
                        <select
                          class="form-control select2"
                          multiple="multiple"
                          data-placeholder="Pilih bank"
                          style="width: 100%"
                          name="banks"
                        >
                          <% banks.forEach(bank=>{ %>
                          <option value="<%= bank._id %>"
                            <% payment?.banks?.forEach(paymentBank=>{ %>   
                              <% if(paymentBank?._id?.toString() === bank?._id?.toString()){ %> 
                                selected="selected"
                              <% } %> 
                            <% }) %> 
                          >
                            <%= bank?.name %>-<%= bank?.nameBank %>-<%= bank?.noRekening %> 
                          </option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                      Simpan
                    </button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>

    <%- include ../../partial/footer.ejs %> <%- include ../../partial/js.ejs %>
  </body>
</html>

<script>
  function readUrl(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $("#preview").attr("src", e.target.result);
        $("#preview").attr("width", "300px");
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#image").change(function () {
    readUrl(this);
  });
</script>
