<!DOCTYPE html>
<html lang="en">
  <body class="hold-transition sidebar-mini layout-fixed">
    <%- include ../../partial/header.ejs %> <%- include ../../partial/navbar.ejs
    %> <%- include ../../partial/sidebar.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Voucher</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item">
                  <a href="/voucher"> Voucher</a>
                </li>
                <li class="breadcrumb-item active">Ubah</li>
              </ol>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">
                    Form Ubah Voucher "<%= voucher?.name %>"
                  </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form
                  action="/voucher/edit/<%= voucher?._id %>?_method=PUT"
                  method="POST"
                  enctype="multipart/form-data"
                >
                  <div class="card-body">
                    <div class="form-group">
                      <label for="name">Nama Game</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        value="<%= voucher?.name %>"
                        placeholder="Masukkan nama game"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label>Nama Kategori</label>
                      <select
                        class="form-control select2"
                        style="width: 100%"
                        name="category"
                      >
                        <option selected="selected">Pilih kategori</option>
                        <% category.forEach(category=>{ %>
                        <option value="<%= category._id %>"
                          <% if(category?._id?.toString() === voucher?.category?._id?.toString()){ %>   
                            selected="selected"
                          <% } %> 
                          >
                          <%= category.name %>
                        </option>
                        <% }) %>
                      </select>
                    </div>

                    <div class="form-group">
                      <label>Nominal</label>
                      <div class="select2-purple">
                        <select
                          class="form-control select2"
                          multiple="multiple"
                          data-placeholder="Pilih nominal"
                          style="width: 100%"
                          name="nominals"
                        >
                          <% nominal.forEach(nominal=>{ %>
                          <option value="<%= nominal._id %>"
                            <% voucher?.nominals?.forEach(voucherNominal=>{ %>   
                              <% if(voucherNominal?._id?.toString() === nominal?._id?.toString()){ %> 
                                selected="selected"
                              <% } %> 
                            <% }) %> 
                          >
                            <%= nominal?.coinName %> <%= nominal?.coinQuantity %>
                          </option>
                          <% }) %>
                        </select>
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="image">Gambar</label>
                      <input
                        type="file"
                        class="form-control"
                        id="image"
                        name="image"
                        placeholder="Masukkan gambar"
                      />
                      <br />
                      <img src="<%= voucher?.thumbnail %>" id="preview" width='300px'/>
                    </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                      Simpan
                    </button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>

    <%- include ../../partial/footer.ejs %> <%- include ../../partial/js.ejs %>
  </body>
</html>

<script>
  function readUrl(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $("#preview").attr("src", e.target.result);
        $("#preview").attr("width", "300px");
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#image").change(function () {
    readUrl(this);
  });
</script>
